{% extends 'QafooTimePlannerBundle::layout.html.twig' %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <h2>
            Jobs
            <form class="form-inline pull-right" onchange="this.submit()">
                <div class="form-group">
                    <select name="month" class="form-control">
                    {% for month in range(1, 12) %}
                        <option {% if month == view.month %}selected{% endif %} value="{{month}}">
                            {{("2015-" ~ month)|date("F")}}
                        </option>
                    {% endfor %}
                    </select>
                    <select name="year" class="form-control">
                    {% for year in range(2010, 2020) %}
                        <option {% if year == view.year %}selected{% endif %} value="{{year}}">
                            {{year}}
                        </option>
                    {% endfor %}
                    </select>
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
                    </button>
                </div>
            </form>
        </h2>
        <form method="POST" class="form-inline" action="{{path("qafoo.time_planner.time_planning.create")}}">
            <input type="hidden" name="year" value="{{view.year}}">
            <input type="hidden" name="month" value="{{view.month}}">
            <table class="table table-striped table-hover table-condensed">
                <thead>
                    <tr>
                        <th>{{"Customer"|trans()}}</th>
                        <th>{{"Project"|trans()}}</th>
                        <th>{{"Revenue"|trans()}}</th>
                        <th>{{"Min. PT"|trans()}}</th>
                        <th>{{"Max. PT"|trans()}}</th>
                        <th>{{"Assignments"|trans()}}</th>
                        <th>{{"Open"|trans()}}</th>
                        <th>{{"Invoice"|trans()}}</th>
                        <th>{{"Comment"|trans()}}</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><input type="text" class="form-control" required name="customer" placeholder="{{"Customer"|trans()}}"></td>
                        <td><input type="text" class="form-control" required name="project" placeholder="{{"Project"|trans()}}"></td>
                        <td><input type="text" class="form-control" required name="revenue" placeholder="{{"Revenue"|trans()}}"></td>
                        <td><input type="text" class="form-control" required name="pt.min" placeholder="{{"Min. PT"|trans()}}"></td>
                        <td><input type="text" class="form-control" required name="pt.max" placeholder="{{"Max. PT"|trans()}}"></td>
                        <td colspan="4">
                            <div class="row">
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="comment" placeholder="{{"Comment"|trans()}}">
                                </div>
                                <div class="col-md-3">
                                    <button type="submit" class="btn btn-primary">
                                        <span class="glyphicon glyphicon-save" aria-hidden="true"></span>
                                    </button>
                                </div>
                            </div>
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="2">Sum</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <th colspan="2">Result</th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </form>
    </div>
</div>
{% endblock %}
