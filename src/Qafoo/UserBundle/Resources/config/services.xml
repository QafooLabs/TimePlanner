<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="qafoo_user.gateway.user" class="Qafoo\UserBundle\Gateway\User">
            <argument type="service" id="doctrine_couchdb.odm.document_manager" />
        </service>

        <service id="qafoo.user_bundle.twig.sub_request_extension" class="Qafoo\UserBundle\Twig\SubRequestExtension">
            <tag name="twig.extension" />
        </service>
    </services>
</container>
