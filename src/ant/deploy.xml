<?xml version="1.0" encoding="UTF-8"?>
<project name="Deploy Task">
    <target name="git:deploy" extensionOf="-deploy:main~hook">
        <exec executable="git">
            <arg value="push" />
            <arg value="origin" />
            <arg value="master" />
        </exec>

        <exec executable="ssh">
            <arg value="${deploy.host}" />
            <arg value="touch ${deploy.path}/DEPLOY" />
        </exec>
        <exec executable="ssh">
            <arg value="${deploy.host}" />
            <arg value="cd ${deploy.path} &amp;&amp; git pull &amp;&amp; git submodule update --init &amp;&amp; ant" />
        </exec>
        <exec executable="ssh">
            <arg value="${deploy.host}" />
            <arg value="rm ${deploy.path}/DEPLOY" />
        </exec>
    </target>
</project>
