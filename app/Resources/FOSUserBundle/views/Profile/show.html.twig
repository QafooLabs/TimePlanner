{% extends "FOSUserBundle::profile.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block profile_content %}
<h2>Profile</h2>

<dl class="dl-horizontal">
    <dt>{{"Name"|trans()}}</dt>
    <dd class="test-name">{{user.name}}</dd>
    <dt>{{"profile.show.username"|trans()}}</dt>
    <dd class="test-login">{{user.login}}</dd>
    <dt>{{"profile.show.email"|trans()}}</dt>
    <dd class="test-email">{{user.email}}</dd>
    <dt>{{"Last Login"|trans()}}</dt>
    <dd class="test-last-login">{{user.auth.lastLogin|date("d. F Y H:i")}}</dd>
</dl>
{% endblock profile_content %}
