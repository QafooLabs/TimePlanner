<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="qafoo.time_planner.homepage" path="/">
        <default key="_controller">QafooTimePlannerBundle:Default:index</default>
    </route>

    <route id="qafoo.time_planner.vacation.overview" path="/vacation">
        <default key="_controller">QafooTimePlannerBundle:Vacation:index</default>
    </route>

    <route id="qafoo.time_planner.vacation.store" path="/vacation/store">
        <default key="_controller">QafooTimePlannerBundle:Vacation:store</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="qafoo.time_planner.public_holiday.overview" path="/holiday">
        <default key="_controller">QafooTimePlannerBundle:PublicHoliday:index</default>
    </route>

    <route id="qafoo.time_planner.public_holiday.store" path="/holiday/store">
        <default key="_controller">QafooTimePlannerBundle:PublicHoliday:store</default>
        <requirement key="_method">POST</requirement>
    </route>
</routes>
